<UserControl x:Class="SQLiteUtils.View.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SQLiteUtils.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">



    <UserControl.Resources>

        <Style TargetType="Label" x:Key="TitleStyle">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="{x:Type Run}">
            <Setter Property="FontFamily" Value="Roboto"/>
        </Style>
        
    </UserControl.Resources>
    
    
    <Grid Background="Bisque" Margin="0, 10, 0, 0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Style="{StaticResource TitleStyle}" Content="{Binding Title}" Grid.ColumnSpan="2"/>
        <Button Grid.Row="1" Content="Generate the SQL script" Width="200" Height="40" Margin="0, 20, 0, 0"
                Command="{Binding InitDatabaseCommand}"/>

        <Button Grid.Row="1" Grid.Column="1" Content="Execute the SQL script" Width="200" Height="40" Margin="0, 20, 0, 0"
                Command="{Binding ExecuteSqlCommand}"/>

        <Label Grid.Row="2" Content="{Binding SqlFail}" Style="{StaticResource TitleStyle}" Foreground="Red" Height="40" Margin="0,20,0,0" Grid.ColumnSpan="2"/>

        <GridSplitter Grid.Row="3" ResizeDirection="Rows" Height="10" Background="GhostWhite"
                      ShowsPreview="False" HorizontalAlignment="Stretch" BorderBrush="White" BorderThickness="1" Grid.ColumnSpan="2"></GridSplitter>

        <ScrollViewer Grid.Row="4" Grid.ColumnSpan="2">
            <!--<ListView Cursor="IBeam" ItemsSource="{Binding SqlLogEntries}">
                --><!--<ListView.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel
                    </DataTemplate
                </ListView.ItemTemplate>--><!--
            </ListView>-->

            <RichTextBox>
                <FlowDocument TextAlignment="Left" IsOptimalParagraphEnabled="True" IsHyphenationEnabled="True">
                    <Paragraph Cursor="IBeam" Margin="10,10,0,0">
                        <Run Text="{Binding SqlLogEntries}"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </ScrollViewer>
        
    </Grid>
    
    
</UserControl>
